<!--
  列表循环
-->
<view
wx:for="{{list}}"
wx:for-index='index'
wx:for-item='item'
wx:key='id'>
  索引：{{index}} -- 值：{{item.name}} -- ID:{{item.id}}
</view>
<!-- 
  对象循环
 -->
<view
wx:for="{{person}}"
wx:for-index='index'
wx:for-item='item'
wx:key='name'
>
