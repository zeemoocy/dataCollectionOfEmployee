<view>{{msg}}</view>
<view>{{num}}</view>
<view>{{isGirl}}</view>
<view>{{person.age}}</view>
<view>{{person.name}}</view>
<view>{{person.height}}</view>
<view>{{person.weight}}</view>
<view>
  <checkbox checked="{{isGirl}}">isGirl</checkbox>
</view>
